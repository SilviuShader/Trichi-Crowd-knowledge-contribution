@using Crowd_knowledge_contribution.Models

@{
    ViewBag.Title = "Articole bombă";
}

<h1>@ViewBag.Message</h1>
<h2>@ViewBag.Title</h2>

@if (User.IsInRole("Admin"))
{
    <a class="btn btn-primary" href="/Domains/Index">Afișare domenii</a>
}
@if (User.IsInRole("Admin") || User.IsInRole("Editor"))
{
    <a class="btn btn-primary" href="/Articles/New">Adaugă articol</a>
    <br />
}
<br />

@using (Html.BeginForm())
{
    @Html.TextBox("SearchName", "", new { @class = "form-control", @placeholder = "Căutare" })
    <br/>
    <input type="submit" value="Căutare" class="col-md-2" />
}

<br />
<br />


@foreach (Article article in ViewBag.Articles)
{
    <div class="panel panel-default">
        @Html.Partial("ArticleInfo", article)
        <div class="panel-footer">
            <a class=" btn btn-sm btn btn-success" href="/Articles/Show/@article.ArticleId">Afișare articol</a>
        </div>
    </div>
}